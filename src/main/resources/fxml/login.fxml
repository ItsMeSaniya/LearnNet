<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.netQuiz.client.controller.LoginController" 
      alignment="CENTER" spacing="20" 
      style="-fx-background-color: #f0f0f0;">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <Label text="NetQuiz" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <Label text="Multi-User Quiz &amp; Chat Platform" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
    
    <VBox spacing="10" alignment="CENTER">
        <Label text="Username:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="usernameField" promptText="Enter your username" 
                   maxWidth="250" style="-fx-font-size: 14px;"/>
    </VBox>
    
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
            prefWidth="250" prefHeight="40" 
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
    
</VBox>
